@{
    List<Slider> sliders = Model;
}
 
@if(sliders.Count>0)
{

    <section id="slider-container" class="slider-area">
        <div class="slider-owl owl-theme owl-carousel">
            @foreach (var slider in sliders)
            {
                <!-- Start Slingle Slide -->
                <div class="single-slide item" style="background-image: url(assets/img/slider/@slider.ImageName)">
                    <!-- Start Slider Content -->
                    <div class="slider-content-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7 col-md-offset-left-5">
                                    <div class="slide-content-wrapper">
                                        <div class="slide-content">
                                            @Html.Raw(slider.Title)
                                            <p>@slider.Subtitle</p>
                                            <a class="default-btn" href="@slider.ButtonLink">@slider.ButtonName</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Start Slider Content -->
                </div>
                <!-- End Slingle Slide -->
            }
        </div>
    </section>
}