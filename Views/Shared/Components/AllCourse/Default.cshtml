
@{
    List<Course> courses = Model;
}

<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var course in courses)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="~/assets/img/course/@course.ImageName" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3>@course.Name</h3>
                            <p>@course.Description</p>
                            <a class="default-btn" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">read more</a>
                        </div>
                    </div>
                </div>
            }            
        </div>
    </div>
</div>  