@{
    List<Teacher> teachers = Model;
}

@if (teachers.Count > 0)
{

    <div class="teacher-area pt-150 pb-105">
        <div class="container">
            <div class="row">
                @foreach (var teacher in teachers)
                {
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a href="teacher-details.html"><img src="~/assets/img/teacher/@teacher.ImageName" alt="teacher"></a>
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a asp-controller="teachers" asp-action="details" asp-route-id="@teacher.Id">@(@teacher.Name + " " + @teacher.Surname)</a></h2>
                                <h4>@teacher.Position</h4>
                                <ul>
                                    <li><a href="@teacher.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@teacher.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@teacher.VimeoUrl"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="@teacher.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
}