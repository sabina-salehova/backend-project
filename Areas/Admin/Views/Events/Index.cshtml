@{
    List<Event> events = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Events Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Writer</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var eventItem in events)
                            {
                                <tr>
                                    <td>@eventItem.Name</td>
                                    <td>@eventItem.Venue</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@eventItem.Id">Details</a>
                                        <div class="d-inline-block">
                                            <form class="forms-sample" method="post" asp-action="delete" asp-route-id="@eventItem.Id">
                                                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>