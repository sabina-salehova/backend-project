@{
    List<TestimonialSlider> testimonialSliders = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Testimonial sliders Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fullname</th>
                                <th>Position</th>
                                <th>Testimonial</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody> 
                            @foreach (var testimonialSlider in testimonialSliders)
                            {
                                <tr>
                                    <td>@testimonialSlider.FullName</td>
                                    <td>@testimonialSlider.Position</td>
                                    <td>@testimonialSlider.Testimonial</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@testimonialSlider.Id">Details</a>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@testimonialSlider.Id">Update</a>
                                        <div class="d-inline-block">
                                            <form class="forms-sample" method="post" asp-action="delete" asp-route-id="@testimonialSlider.Id">
                                                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>